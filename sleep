const getSleepHours = day => {

switch(day){
  case 'monday':
  return 8
  break;

  case 'tuesday':
  return 8
  break;

  case 'wednesday':
  return 7
  break;

  case 'thursday':
  return 8
  break;

  case 'friday':
  return 5
  break;

  case 'saturday':
  return 8
  break;

  case 'sunday':
  return 6
  break;

  default:
  return "error!"

 }
};

